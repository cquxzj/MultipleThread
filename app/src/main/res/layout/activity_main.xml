<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mythread.zptc.cn.mythread.MainActivity">

    <ImageView
        android:id="@+id/activity_main_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:visibility="invisible"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/activity_main_load_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AsycnTask方式"/>
    <Button
        android:id="@+id/activity_main_handler_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handle方式"
        />
</LinearLayout>
